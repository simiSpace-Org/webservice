{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_KEY_ID`}}",
        "aws_region": "{{env `AWS_REGION`}}",
        "subnet_id": "{{env `AWS_SUBNET_ID`}}",
        "source_ami": "ami-0c293f3f676ec4f90",
        "ssh_username": "ec2-user",
        "ami_user_name": "{{env `AMI_USERS`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `aws_region`}}",
            "instance_type": "t2.micro",
            "vpc_id": "{{user `vpc_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "ec2-user",
            "ami_users": "{{user `ami_user_name`}}",
            "ami_name": "SimisCloud_csye6225_{{timestamp}}",
            "ami_description": "Amazon AMI for CSYE 6225"
        }
    ],
    "provisioners": [
       { 
        "type": "file",
        "source": "webservice.zip",
        "destination": "/tmp/webservice.zip"
    },
        {
        "type": "file",
        "source": "packer/pgdg.repo",
        "destination": "/tmp/pgdg.repo"
    },
    {
        "type": "file",
        "source": "packer/nodeapp.service",
        "destination": "/tmp/nodeapp.service"
    },
    {
            "type": "shell",
            "script":"packer/setup.sh"
        }
    ]
}
